<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/pkmnSpriteEvo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/candiesReqTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="Candies Required"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemReqTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Item Required"
            app:layout_constraintEnd_toEndOf="@+id/candiesReqTxt"
            app:layout_constraintStart_toStartOf="@+id/candiesReqTxt"
            app:layout_constraintTop_toBottomOf="@+id/candiesReqTxt" />

        <TextView
            android:id="@+id/lureReqTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Lure Module"
            app:layout_constraintEnd_toEndOf="@+id/itemReqTxt"
            app:layout_constraintStart_toStartOf="@+id/itemReqTxt"
            app:layout_constraintTop_toBottomOf="@+id/itemReqTxt" />

        <TextView
            android:id="@+id/distanceReqTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Buddy Distance Required"
            app:layout_constraintEnd_toEndOf="@+id/lureReqTxt"
            app:layout_constraintStart_toStartOf="@+id/lureReqTxt"
            app:layout_constraintTop_toBottomOf="@+id/lureReqTxt" />

        <TextView
            android:id="@+id/beBuddyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Should be Buddy to Evolve"
            app:layout_constraintEnd_toEndOf="@+id/distanceReqTxt"
            app:layout_constraintStart_toStartOf="@+id/distanceReqTxt"
            app:layout_constraintTop_toBottomOf="@+id/distanceReqTxt" />

        <TextView
            android:id="@+id/beDayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Only Evolves during Day"
            app:layout_constraintEnd_toEndOf="@+id/beBuddyTxt"
            app:layout_constraintStart_toStartOf="@+id/beBuddyTxt"
            app:layout_constraintTop_toBottomOf="@+id/beBuddyTxt" />

        <TextView
            android:id="@+id/beNightTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="Only Evolves during Night"
            app:layout_constraintEnd_toEndOf="@+id/beDayTxt"
            app:layout_constraintStart_toStartOf="@+id/beDayTxt"
            app:layout_constraintTop_toBottomOf="@+id/beDayTxt" />

        <TextView
            android:id="@+id/noCandyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="No candy needed if Traded"
            app:layout_constraintEnd_toEndOf="@+id/beNightTxt"
            app:layout_constraintStart_toStartOf="@+id/beNightTxt"
            app:layout_constraintTop_toBottomOf="@+id/beNightTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>